<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LayoutsProject"
             x:Class="LayoutsProject.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Button Text="StackLayout" Clicked="ToStackLayout_Clicked"/>
        <Button Text="AbsoluteLayout" Clicked="ToAbsoluteLayout_Clicked"/>
        <Button Text="RelativeLayout" Clicked="ToRelativeLayout_Clicked"/>
        <Button Text="GridLayout" Clicked="ToGridLayout_Clicked"/>
    </StackLayout>

</ContentPage>
