<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutsProject.StackLayoutFolder.StackLayoutPage">
    <StackLayout Spacing="10">
        <!--Layout na Vertical-->
        <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" BackgroundColor="Aqua">
            <Label Text="Texto 1"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
            <Label Text="Texto 2"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
        <!--Layout na Horizontal-->
        <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand" BackgroundColor="Aqua">
            <Label Text="Texto 1"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
            <Label Text="Texto 2"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </StackLayout>
</ContentPage>